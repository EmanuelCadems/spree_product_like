<% content_for :page_title do %>
  <%= t('spree_product_like.admin.products_ranking_title') %>
<% end %>
<% if @collection.any? %>
  <%= paginate @collection %>
  <table class="index" id="listing_products">
    <colgroup>
      <col style="width: 60%;"/>
      <col style="width: 20%;"/>
    </colgroup>
    <thead>
      <tr data-hook="admin_products_pending_questions_headers">
        <th><%= Spree.t(:products) %></th>
        <th><%= t('admin.likes_count') %></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |product| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td>
            <%= link_to product.name, edit_admin_product_path(product) %>
          </td>
          <td>
            <%= product.likes_count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @collection %>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= t('admin.no_liked_products') %>
  </div>
<% end %>
